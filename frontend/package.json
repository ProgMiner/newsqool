{
    "name": "frontend",
    "version": "0.1.0",
    "license": "public domain",
    "private": true,
    "homepage": ".",
    "dependencies": {
        "@bem-react/classname": "^1.5.12",
        "axios": "^1.1.3",
        "primeicons": "^6.0.1",
        "primereact": "^8.7.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-helmet": "^6.1.0",
        "react-query": "^3.39.2",
        "react-router-dom": "^6.4.3",
        "react-scripts": "5.0.1",
        "typescript": "^4.8.4",
        "web-vitals": "^2.1.4"
    },
    "devDependencies": {
        "@types/node": "^16.18.3",
        "@types/react": "^18.0.25",
        "@types/react-dom": "^18.0.8",
        "@types/react-helmet": "^6.1.5",
        "eslint": "8.22.0",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-import": "^2.26.0",
        "http-proxy-middleware": "^2.0.6"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "eject": "react-scripts eject",
        "lint": "eslint --ext .ts --ext .tsx --ignore-path .gitignore --ignore-pattern \"!**/.*\" . --fix"
    },
    "eslintConfig": {
        "extends": "react-app",
        "rules": {
            "array-bracket-spacing": [
                "error",
                "never"
            ],
            "object-curly-spacing": [
                "error",
                "always"
            ],
            "import/order": [
                "warn",
                {
                    "groups": [
                        [
                            "builtin",
                            "external"
                        ],
                        [
                            "index",
                            "sibling",
                            "parent"
                        ],
                        [
                            "unknown"
                        ]
                    ],
                    "newlines-between": "always"
                }
            ],
            "import/newline-after-import": [
                "warn",
                {
                    "count": 2
                }
            ],
            "no-unused-vars": "off",
            "@typescript-eslint/no-unused-vars": [
                "warn",
                {
                    "vars": "local",
                    "args": "after-used",
                    "ignoreRestSiblings": false,
                    "varsIgnorePattern": "^_",
                    "argsIgnorePattern": "^_"
                }
            ],
            "@typescript-eslint/no-explicit-any": "error",
            "semi": [
                "error",
                "always"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "react/jsx-indent-props": [
                "error",
                "first"
            ]
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
